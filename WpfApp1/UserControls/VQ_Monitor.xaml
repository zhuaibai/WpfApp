<UserControl
    x:Class="WpfApp1.UserControls.VQ_Monitor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1000"
    d:DesignWidth="1200"
    Background="White"
    mc:Ignorable="d">
    <UserControl.Resources>
        <!--  GroupBox模版控件  -->
        <Style TargetType="GroupBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                            <StackPanel>
                                <Border Height="22" Background="#FFD9E8FF">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Text="{TemplateBinding Header}" />
                                </Border>
                                <ContentPresenter />
                            </StackPanel>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Width" Value="90" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Background" Value="#ddd" />
            <Setter Property="Foreground" Value="#999" />
            <Setter Property="BorderBrush" Value="#33ffffff" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border
                            x:Name="bor"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#ddd"
                            BorderThickness="0,0,0,3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bor" Property="BorderThickness" Value="0,0,0,3" />
                                <Setter TargetName="bor" Property="BorderBrush" Value="#FF1677FF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Foreground" Value="#FF1677FF" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="auto" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <!--  第一行  -->
        <StackPanel Orientation="Horizontal">
            <RadioButton
                Click="ElementView_Click"
                Content="{DynamicResource 概览图}"
                IsChecked="True" />
            <RadioButton Click="ElementSetting_Click" Content="{DynamicResource 参数设置}" />
            <!--<RadioButton Content="{DynamicResource 软件升级}" />-->
        </StackPanel>
        <!--  第二行 第一列  -->
        <Grid Grid.Row="1" Margin="10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <!--  BMS  -->
            <GroupBox Header="BMS">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <!--  协议类型  -->
                    <TextBlock Style="{StaticResource ContentText}" Text="{DynamicResource 协议类型}" />
                    <TextBlock
                        Grid.Column="1"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBMS1_VQ.ProtocolType}" />
                    <!--  BMS通信  -->
                    <TextBlock
                        Grid.Column="2"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource BMS通信正常}" />
                    <TextBlock
                        Grid.Column="3"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBMS1_VQ.BMS_ComOK}" />
                    <!--  BMS低电报警  -->
                    <TextBlock
                        Grid.Row="1"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource BMS低电报警}" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBMS1_VQ.BMS_LowBattAlarm}" />
                    <!--  BMS低电故障  -->
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="2"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource BMS低电故障}" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="3"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBMS1_VQ.BMS_LowBattFault}" />
                    <!--  BMS允许充电  -->
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource BMS允许充电}" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="1"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBMS1_VQ.BMS_ChgEnable}" />
                    <!--  BMS允许放电  -->
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="2"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource BMS允许放电}" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="3"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBMS1_VQ.BMS_DisEnable}" />
                    <!--  BMS充电过流  -->
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource BMS充电过流}" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="1"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBMS1_VQ.BMS_ChgOC}" />
                    <!--  BMS放电过流  -->
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="2"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource BMS放电过流}" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="3"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBMS1_VQ.BMS_DisOC}" />
                    <!--  BMS温度过低  -->
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource BMS温度过低}" />
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="1"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBMS1_VQ.BMS_UnderTemp}" />
                    <!--  BMS温度过高  -->
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="2"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource BMS温度过高}" />
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="3"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBMS1_VQ.BMS_OverTemp}" />
                    <!--  BMS充电电压限制  -->
                    <TextBlock
                        Grid.Row="8"
                        Grid.Column="0"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource BMS充电电压限制}" />
                    <TextBlock
                        Grid.Row="8"
                        Grid.Column="1"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBMS1_VQ.BMS_ChgVoltLimit}" />
                    <!--  BMS放电电压限制  -->
                    <TextBlock
                        Grid.Row="8"
                        Grid.Column="2"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource BMS放电电压限制}" />
                    <TextBlock
                        Grid.Row="8"
                        Grid.Column="3"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBMS1_VQ.BMS_DisVoltLimit}" />
                    <!--  BMS充电电流限制  -->
                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="0"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource BMS充电电流限制}" />
                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="1"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBMS1_VQ.BMS_ChgCurrLimit}" />
                    <!--  BMS当前SOC  -->
                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="2"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource BMS当前SOC}" />
                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="3"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBMS1_VQ.BMS_SOC}" />
                    <!--  BMS充电电流  -->
                    <TextBlock
                        Grid.Row="7"
                        Grid.Column="0"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource BMS充电电流}" />
                    <TextBlock
                        Grid.Row="7"
                        Grid.Column="1"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBMS1_VQ.BMS_ChgCurr}" />
                    <!--  BMS放电电流  -->
                    <TextBlock
                        Grid.Row="7"
                        Grid.Column="2"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource BMS放电电流}" />
                    <TextBlock
                        Grid.Row="7"
                        Grid.Column="3"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBMS1_VQ.BMS_DisCurr}" />
                    <!--  BMS平均温度  -->
                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource BMS平均温度}" />
                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="1"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBMS1_VQ.BMS_AvgTemp}" />
                </Grid>
            </GroupBox>
            <!--  市电  -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <GroupBox Grid.Row="2" Header="{DynamicResource 市电}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <!--  标题  -->
                        <TextBlock
                            Grid.Row="0"
                            Style="{StaticResource HeaderText}"
                            Text="{DynamicResource 属性}" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            Style="{StaticResource HeaderText}"
                            Text="{DynamicResource 当前值}" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="2"
                            Style="{StaticResource HeaderText}"
                            Text="{DynamicResource 单位}" />
                        <!--  市电电压  -->
                        <TextBlock
                            Grid.Row="1"
                            Style="{StaticResource ContentText}"
                            Text="{DynamicResource 市电电压}" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Style="{StaticResource ContentText}"
                            Text="{Binding HGRID_VQ.MainsVoltage}" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            Style="{StaticResource ContentText}"
                            Text="V" />
                        
                        <!--  市电频率  -->
                        <TextBlock
                            Grid.Row="3"
                            Style="{StaticResource ContentText}"
                            Text="{DynamicResource 市电频率}" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="1"
                            Style="{StaticResource ContentText}"
                            Text="{Binding HGRID_VQ.MainsFrequency}" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="2"
                            Style="{StaticResource ContentText}"
                            Text="Hz" />

                    </Grid>
                </GroupBox>
            </ScrollViewer>

            <!--  系统信息与状态  -->
            <ScrollViewer
                Grid.Row="2"
                VerticalAlignment="Bottom"
                VerticalScrollBarVisibility="Auto">
                <GroupBox FontSize="16" Header="{DynamicResource 系统信息}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <!--  系统时间  -->
                        <TextBlock Style="{StaticResource ContentText}" Text="{DynamicResource 系统时间}" />
                        <TextBlock
                            Grid.Column="2"
                            Grid.ColumnSpan="2"
                            Style="{StaticResource ContentText}"
                            Text="{Binding HGEN.SystemTime}" />
                        <!--  版本号  -->
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            Style="{StaticResource ContentText}"
                            Text="{DynamicResource 版本号}" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="3"
                            Style="{StaticResource ContentText}"
                            Text="{Binding HIMSG1.Version}" />
                        <!--  发布日期  -->
                        <TextBlock
                            Grid.Row="1"
                            Style="{StaticResource ContentText}"
                            Text="{DynamicResource 发布日期}" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Style="{StaticResource ContentText}"
                            Text="{Binding HIMSG1.ReleaseDate}" />

                    </Grid>
                </GroupBox>
            </ScrollViewer>

        </Grid>
        <!--  第二行 第二列  -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <!--  第一行 图标显示  -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <!--  太阳能发电(上)  -->
                <Grid Grid.Column="1">

                    <local:RingUC
                        FontSize="12"
                        PercentValue="{Binding MPPTTotalPwr}"
                        icon="&#xe809;" />
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Text="{Binding HPV_PDF.PVPwr}" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            FontSize="10"
                            Text="w" />
                    </StackPanel>

                </Grid>
                <!--  左一  -->
                <Grid Grid.Row="1">

                    <local:RingUC
                        FontSize="12"
                        PercentValue="{Binding ACTotalPwr}"
                        icon="&#xe61c;" />

                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Text="{Binding ACPowerVM}" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            FontSize="10"
                            Text="w" />
                    </StackPanel>
                </Grid>
                <!--  中间  -->
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                    <TextBlock
                        HorizontalAlignment="Center"
                        FontFamily="../Resource/Fonts/#iconfont"
                        FontSize="15"
                        Foreground="#FF1BD0E4"
                        Text="&#xe62f;" />
                    <StackPanel
                        Margin="10"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="../Resource/Fonts/#iconfont"
                            FontSize="15"
                            Foreground="#FF1BD0E4"
                            Text="&#xec63;" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="../Resource/Fonts/#iconfont"
                            FontSize="15"
                            Foreground="#FF1BD0E4"
                            Text="&#xec63;" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="../Resource/Fonts/#iconfont"
                            FontSize="15"
                            Foreground="#FF1BD0E4"
                            Text="&#xec63;" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="../Resource/Fonts/#iconfont"
                            FontSize="15"
                            Foreground="#FF1BD0E4"
                            Text="&#xec63;" />
                        <TextBlock
                            Margin="10,0"
                            FontFamily="../Resource/Fonts/#iconfont"
                            FontSize="30"
                            Text="&#xe6af;" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="../Resource/Fonts/#iconfont"
                            FontSize="15"
                            Foreground="#FF1BD0E4"
                            Text="&#xec62;" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="../Resource/Fonts/#iconfont"
                            FontSize="15"
                            Foreground="#FF1BD0E4"
                            Text="&#xec62;" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="../Resource/Fonts/#iconfont"
                            FontSize="15"
                            Foreground="#FF1BD0E4"
                            Text="&#xec62;" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="../Resource/Fonts/#iconfont"
                            FontSize="15"
                            Foreground="#FF1BD0E4"
                            Text="&#xec62;" />
                    </StackPanel>

                </StackPanel>
                <!--  右一  -->
                <Grid Grid.Row="1" Grid.Column="2">
                    <local:RingUC
                        Grid.Row="1"
                        Grid.Column="2"
                        FontSize="12"
                        PercentValue="{Binding InvTotalPwr}"
                        icon="&#xe973;" />

                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Text="{Binding HOP_PDF.ActivePwr}" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            FontSize="10"
                            Text="w" />
                    </StackPanel>
                </Grid>



            </Grid>
            <!--  第二行  -->
            <GroupBox Grid.Row="1" Header="电池">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <!--  电池节数  -->
                    <TextBlock
                        Grid.Row="0"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource 电池节数}" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBAT_VQ.BattCells}" />
                    <!--  电池电压  -->
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="2"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource 电池电压}" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="3"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBAT_VQ.BattVolt}" />
                    <!--  电池容量  -->
                    <TextBlock
                        Grid.Row="1"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource 电池容量}" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBAT_VQ.BattCapacity}" />
                    <!--  母线电压  -->
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="2"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource 母线电压}" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="3"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBAT_VQ.BusVolt}" />
                    <!--  电池充电电流  -->
                    <TextBlock
                        Grid.Row="2"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource 电池充电电流}" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="1"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBAT_VQ.BattChgCurr}" />
                    <!--  电池放电电流  -->
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="2"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource 电池放电电流}" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="3"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBAT_VQ.BattDisCurr}" />
                    <!--  充电总开关  -->
                    <TextBlock
                        Grid.Row="3"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource 充电总开关}" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="1"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBAT_VQ.ChgMasterSW}" />
                    <!--  AC充电开关  -->
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="2"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource AC充电开关}" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="3"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBAT_VQ.ACChgSW}" />
                    <!--  太阳能充电开关  -->
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource 太阳能充电开关}" />
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="1"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HBAT_VQ.SolarChgSW}" />
                </Grid>
            </GroupBox>


        </Grid>
        <!--  第二行 第三列  -->
        <Grid
            Grid.Row="1"
            Grid.Column="2"
            Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <GroupBox Header="{DynamicResource 输出}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <!--  标题  -->
                    <TextBlock
                        Grid.Row="0"
                        Style="{StaticResource HeaderText}"
                        Text="{DynamicResource 属性}" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Style="{StaticResource HeaderText}"
                        Text="{DynamicResource 当前值}" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="2"
                        Style="{StaticResource HeaderText}"
                        Text="{DynamicResource 单位}" />

                    <!--  输出电压  -->
                    <TextBlock
                        Grid.Row="1"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource 输出电压}" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HOP_VQ.OutputVoltage}" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="2"
                        Style="{StaticResource ContentText}"
                        Text="V" />
                    <!--  输出频率  -->
                    <TextBlock
                        Grid.Row="2"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource 输出频率}" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="1"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HOP_VQ.OutputFrequency}" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="2"
                        Style="{StaticResource ContentText}"
                        Text="Hz" />
                    <!--  视在功率  -->
                    <TextBlock
                        Grid.Row="3"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource 视在功率}" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="1"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HOP_VQ.ReactivePower}" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="2"
                        Style="{StaticResource ContentText}"
                        Text="W" />
                    <!--  有功功率  -->
                    <TextBlock
                        Grid.Row="4"
                        Style="{StaticResource ContentText}"
                        Text="{DynamicResource 有功功率}" />
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="1"
                        Style="{StaticResource ContentText}"
                        Text="{Binding HOP_VQ.ActivePower}" />
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="2"
