<UserControl
    x:Class="WpfApp1.UserControls.MonitorUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="1200"
    Background="White"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                            <StackPanel>
                                <Border Height="22" Background="#FFD9E8FF">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Text="{TemplateBinding Header}" />
                                </Border>
                                <ContentPresenter />
                            </StackPanel>

                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Width" Value="80" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Background" Value="#ddd" />
            <Setter Property="Foreground" Value="#999" />
            <Setter Property="BorderBrush" Value="#33ffffff" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border
                            x:Name="bor"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#ddd"
                            BorderThickness="0,0,0,3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bor" Property="BorderThickness" Value="0,0,0,3" />
                                <Setter TargetName="bor" Property="BorderBrush" Value="#FF1677FF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Foreground" Value="#FF1677FF" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <!--  第一行  -->
        <StackPanel Orientation="Horizontal">
            <RadioButton Content="概览图" IsChecked="True" Click="ElementView_Click" />
            <RadioButton Content="参数设置" Click="ElementSetting_Click"/>
            <RadioButton Content="软件升级" />
        </StackPanel>
        <!--  第二行 第一列  -->
        <Grid Grid.Row="1" Margin="10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="150" />
                <RowDefinition Height="100" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <GroupBox Header="PV信息">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <UniformGrid Columns="4">
                        <TextBlock FontSize="16" Text="" />
                        <TextBlock FontSize="16" Text="PV1" />
                        <TextBlock FontSize="16" Text="PV2" />
                        <TextBlock FontSize="16" Text="合计" />
                    </UniformGrid>
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding PVList}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <UniformGrid Columns="4">
                                    <TextBlock FontSize="16" Text="{Binding PV_Name}" />
                                    <TextBlock
                                        FontSize="16"
                                        Foreground="#FF0000FF"
                                        Text="{Binding PV1}" />
                                    <TextBlock
                                        FontSize="16"
                                        Foreground="#FF0000FF"
                                        Text="{Binding PV2}" />
                                    <TextBlock
                                        FontSize="16"
                                        Foreground="#FF0000FF"
                                        Text="{Binding PV_Count}" />
                                </UniformGrid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </GroupBox>
            <GroupBox
                Grid.Row="1"
                FontSize="16"
                Header="状态信息">
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="7*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBlock
                        HorizontalAlignment="Right"
                        FontSize="16"
                        Text="总运行:" />


                    <TextBlock
                        Grid.Row="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="PV源类型:" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="#FF0000FF"
                        Text="0.独立MPPT" />

                </Grid>
            </GroupBox>
            <GroupBox
                Grid.Row="2"
                FontSize="16"
                Header="电量信息">
                <ItemsControl ItemsSource="{Binding PV_Info_List}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    HorizontalAlignment="Right"
                                    FontSize="16"
                                    Text="{Binding PV_Info_Name}" />
                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    FontSize="16"
                                    Foreground="#FF0000FF"
                                    Text="{Binding PV_Info_Value}" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </GroupBox>
        </Grid>
        <!--  第二行 第二列  -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*" MaxHeight="330" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>
            <!--  第一行 图标显示  -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <!--  上边 (光伏发电)  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="../Resource/Fonts/#iconfont"
                            FontSize="60"
                            Foreground="#FF3596D4"
                            Text="&#xe809;" />
                        <!--  向下箭头（垂直翻转）  -->
                        <Path
                            Margin="0,0,0,5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Data="M0,0 L0,3 L4,5 L8,3 L8,0 L4,3 Z"
                            Fill="#9918aabd" />
                    </StackPanel>


                    <TextBlock
                        Grid.Column="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                        <Run Text="光伏功率:" />
                        <Run
                            FontSize="16"
                            Foreground="#FF0000FF"
                            Text="{Binding hopViewModel.Name}" />
                    </TextBlock>
                </Grid>
                <!--  中间 (电池 总控 负载)  -->
                <Grid Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition Width="150" />
                        </Grid.ColumnDefinitions>
                        <!--  向下箭头（垂直翻转）  -->
                        <Path
                            Grid.Column="4"
                            Margin="0,0,0,5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Data="M0,0 L0,3 L4,5 L8,3 L8,0 L4,3 Z"
                            Fill="#9918aabd" />
                        <Path
                            Grid.Column="4"
                            Margin="0,0,0,5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Data="M0,0 L0,3 L4,5 L8,3 L8,0 L4,3 Z"
                            Fill="#9918aabd" />
                        <TextBlock
                            Grid.Column="4"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="../Resource/Fonts/#iconfont"
                            FontSize="50"
                            Foreground="#FF3596D4"
                            Text="&#xe6af;" />
                        <!--  电池发电  -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="../Resource/Fonts/#iconfont"
                                FontSize="50"
                                Foreground="#FF3596D4"
                                Text="&#xe603;" />
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock>
                                    <Run FontSize="13" Text="SOC(%):" />
                                    <Run
                                        FontSize="15"
                                        Foreground="#FF0000FF"
                                        Text="0" />
                                </TextBlock>
                                <TextBlock>
                                    <Run FontSize="13" Text="充电功率(W):" />
                                    <Run
                                        FontSize="15"
                                        Foreground="#FF0000FF"
                                        Text="0" />
                                </TextBlock>
                                <TextBlock>
                                    <Run FontSize="13" Text="放电功率(W):" />
                                    <Run
                                        FontSize="15"
                                        Foreground="#FF0000FF"
                                        Text="0" />
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>

                        <Grid Grid.Column="5">
                            <!--  向右箭头（原始）  -->
                            <Path
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Data="M0,0 L3,0 L5,4 L3,8 L0,8 L3,4 Z"
                                Fill="#9918aabd" />
                        </Grid>
                        <Grid Grid.Column="6">
                            <!--  向右箭头（原始）  -->
                            <Path
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Data="M0,0 L3,0 L5,4 L3,8 L0,8 L3,4 Z"
                                Fill="#9918aabd" />
                        </Grid>
                        <Grid Grid.Column="7">
                            <!--  向右箭头（原始）  -->
                            <Path
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Data="M0,0 L3,0 L5,4 L3,8 L0,8 L3,4 Z"
                                Fill="#9918aabd" />
                        </Grid>
                        <Grid Grid.Column="1">
                            <!--  向左箭头（水平镜像）  -->
                            <Path
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Data="M5,0 L2,0 L0,4 L2,8 L5,8 L2,4 Z"
                                Fill="#9918aabd" />
                        </Grid>
                        <Grid Grid.Column="2">
                            <!--  向左箭头（水平镜像）  -->
                            <Path
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Data="M5,0 L2,0 L0,4 L2,8 L5,8 L2,4 Z"
                                Fill="#9918aabd" />
                        </Grid>
                        <Grid Grid.Column="3">
                            <!--  向左箭头（水平镜像）  -->
                            <Path
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Data="M5,0 L2,0 L0,4 L2,8 L5,8 L2,4 Z"
                                Fill="#9918aabd" />
                        </Grid>
                        <Grid Grid.Column="8">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="../Resource/Fonts/#iconfont"
                                    FontSize="50"
                                    Foreground="#FF3596D4"
                                    Text="&#xe611;" />
                                <TextBlock>
                                    <Run FontSize="13" Text="总负载:" />
                                    <Run
                                        FontSize="15"
                                        Foreground="#FF0000FF"
                                        Text="{Binding hopViewModel.Kame}" />
                                </TextBlock>
                            </StackPanel>

                        </Grid>
                    </Grid>
                </Grid>
                <!--  下边 (电网)  -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1">
                        <Path
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Data="M0,0 L0,3 L4,5 L8,3 L8,0 L4,3 Z"
                            Fill="#9918aabd" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="../Resource/Fonts/#iconfont"
                            FontSize="60"
                            Foreground="#FF3596D4"
                            Text="&#xe809;" />
                        <!--  向下箭头（垂直翻转）  -->
                    </StackPanel>

                    <StackPanel
                        Grid.Column="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center">
                            <Run Text="电网取电:" />
                            <Run
                                FontSize="16"
                                Foreground="#FF0000FF"
                                Text="0" />
                        </TextBlock>
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center">
                            <Run Text="馈入电网:" />
                            <Run
                                FontSize="16"
                                Foreground="#FF0000FF"
                                Text="0" />
                        </TextBlock>
                    </StackPanel>

                </Grid>

            </Grid>
            <!--  第二行  -->
            <GroupBox Grid.Row="1" Header="逆变信息" />
            <!--  第三行  -->
            <GroupBox Grid.Row="2" Header="电池信息" />
        </Grid>
        <!--  第二行 第三列  -->
        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <GroupBox Header="电网信息" />
            <GroupBox Grid.Row="1" Header="柴油发电机信息" />
            <GroupBox Grid.Row="2" Header="EPS信息" />
        </Grid>
        <!--  第二行 第四列  -->
        <Grid Grid.Row="1" Grid.Column="3">
            <Border
                Margin="3,0,0,5"
                BorderBrush="Gray"
                BorderThickness="1" />
        </Grid>
        <!--  第三行  -->
        <Grid Grid.Row="2" Grid.ColumnSpan="4">
            <Border BorderBrush="Gray" BorderThickness="1">
                <StackPanel Margin="5,0" Orientation="Horizontal">
                    <Button
                        x:Name="StopBtn"
 
                        Width="80"
                        Height="30"
                        Command="{Binding DataContext.StopCommand,RelativeSource={RelativeSource AncestorType= Window}}"
                        
                        Margin="0,0,5,0"
                        Background="Red"
                        Content="停止"
                        Style="{StaticResource BtnStyle}"
                        Tag="&#xe691;" />
                    <Button
                        x:Name="BeginBtn"
                        
                        Command="{Binding DataContext.StartCommand,RelativeSource={RelativeSource AncestorType=Window}}"
                        Width="80"
                        Height="30"
                        Background="#FF1AFA29"
                        Content="开始"
                        Style="{StaticResource BtnStyle}"
                        Tag="&#xe622;" />
                    <Border Width="2" Background="Black" Margin="5,0,0,0"></Border>
                    <CheckBox VerticalAlignment="Center" Margin="10,0,0,0">
                        <TextBlock Text="导出运行数据" VerticalAlignment="Center" FontSize="15"/>
                    </CheckBox>
                    <TextBlock VerticalAlignment="Center" Margin="5,0,0,0">
                        <Hyperlink >日志目录</Hyperlink>
                    </TextBlock>
                    <Border Width="2" Background="Black" Margin="5,0,0,0"></Border>
                </StackPanel>
            </Border>
        </Grid>
        
        
        
        <!-- 参数设置 界面-->
        <Grid Grid.ColumnSpan="4" Grid.Row="1" Grid.RowSpan="2" Visibility="Collapsed" x:Name="SettingView" Background="White">
            <Grid>
                <StackPanel Orientation="Horizontal"  Height="40">
                    <TextBlock Text="电压"/>
                    <TextBlock Text="{Binding hopViewModel.Name}"/>
                    <Button Content="设置" Width="40" Margin="5" Command="{Binding DataContext.hopViewModel.Button1Command,RelativeSource={RelativeSource AncestorType=Window}}"/>
                    <TextBox Text="{Binding hopViewModel.Input1,UpdateSourceTrigger=PropertyChanged}" Width="60" TextAlignment="Center" FontSize="17" ></TextBox>
                </StackPanel>
            </Grid>
                
            
        </Grid>
    </Grid>
</UserControl>
