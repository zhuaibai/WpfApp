<Window
    x:Class="WpfApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1200"
    Height="700"
    mc:Ignorable="d">
    <Window.Resources>
        <DropShadowEffect
            x:Key="DropShadow"
            BlurRadius="10"
            Direction="270"
            Opacity="0.6"
            ShadowDepth="3"
            Color="#40000000" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>
        <!--  第一行 菜单  -->
        <StackPanel Background="#FFD9E8FF" Orientation="Horizontal">
            <Button
                x:Name="btnMenu"
                Background="#FF1677FF"
                Click="btnMenu_Click"
                Content="功能选项"
                Style="{StaticResource MenuStyleBtn}"
                Tag="&#xe867;" />
            <Border
                Margin="10,20,5,20"
                BorderBrush="White"
                BorderThickness="2,0,0,0" />
            <Button
                Click="SerialSettingButton_Click"
                Background="#FF1677FF"
                Content="串口设置"
                Style="{StaticResource MenuStyleBtn}"
                Tag="&#xe62c;" />
            <Button
                Background="#FF1677FF"
                Content="打开串口"
                Style="{StaticResource MenuStyleBtn}"
                Tag="&#xec61;" />
            <Border
                Margin="10,20,5,20"
                BorderBrush="White"
                BorderThickness="2,0,0,0" />
            <Button
                Background="#FF1677FF"
                Content="命令测试"
                Style="{StaticResource MenuStyleBtn}"
                Tag="&#xe602;" />
            <Button
                Background="#FF1677FF"
                Content="更新下载"
                Style="{StaticResource MenuStyleBtn}"
                Tag="&#xe616;" />
            <Button
                Background="#FF1677FF"
                Content="系统设置"
                Style="{StaticResource MenuStyleBtn}"
                Tag="&#xe765;" />
            <Button
                Background="#FF81ED7B"
                Content="开机"
                Style="{StaticResource MenuStyleBtn}"
                Tag="&#xe601;" />
            <Button
                Background="#FFF75231"
                Content="关机"
                Style="{StaticResource MenuStyleBtn}"
                Tag="&#xe601;" />
            <Button
                Background="#FF1677FF"
                Content="帮助"
                Style="{StaticResource MenuStyleBtn}"
                Tag="&#xe8ac;" />
        </StackPanel>
        <!--  下拉菜单弹出层  -->
        <Popup
            x:Name="myPopup"
            Width="100"
            AllowsTransparency="True"
            Placement="Bottom"
            PlacementTarget="{Binding ElementName=btnMenu}"
            StaysOpen="False">
            <!--  设置阴影  -->
            <Border Padding="5" Background="Transparent">
                <Border
                    Height="50"
                    Background="White"
                    BorderBrush="#FFCCCCCC"
                    BorderThickness="1"
                    CornerRadius="7"
                    Effect="{StaticResource DropShadow}">
                    <StackPanel>
                        <Button>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border
                                                    x:Name="bord"
                                                    Width="70"
                                                    Height="25"
                                                    Margin="0,5,0,0"
                                                    BorderBrush="Black"
                                                    BorderThickness="1"
                                                    CornerRadius="5">
                                                    <TextBlock
                                                        x:Name="text"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Foreground="Black"
                                                        Text="示波器"
                                                        TextAlignment="Center" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bord" Property="Background" Value="#FF9479FA" />
                                                        <Setter Property="Cursor" Value="Hand" />
                                                        <Setter TargetName="text" Property="Foreground" Value="#FFFFFFFF" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>

                        </Button>
                    </StackPanel>
                </Border>
            </Border>

        </Popup>
        <!--  第二行 内容  -->
        <ContentControl Grid.Row="1" Content="{Binding ContentUC}" Margin="3,3"/>
        <!--  第三行 底部  -->
        <Grid Grid.Row="2" Background="#FFD9E8FF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal">
                <Border
                    Width="20"
                    Height="20"
                    Margin="5,0"
                    Background="Red"
                    CornerRadius="10" />
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="串口状态:" />
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="发送帧:" />
                <TextBlock
                    Margin="7,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="Red"
                    Text="0" />
                <TextBlock
                    Margin="50,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="接受帧:" />
                <TextBlock
                    Margin="7,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="Red"
                    Text="0" />
                <TextBlock
                    Margin="50,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="计数清零:" />
                <TextBlock
                    Margin="7,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="Red"
                    Text="0" />
            </StackPanel>
            <StackPanel
                Grid.Column="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock Text="启动时间:" />
                <TextBlock Margin="8,0,20,0" Text="2025-3-18 10:24:50" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
